{
  "manifest_version": 3,
  "name": "AI Chat Navigator",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://www.perplexity.ai/*",
        "https://claude.ai/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
